<%= bootstrap_form_for(@tournament) do |form| %>

  <div class="form-group form-row">
    <div class="col-md-3">
      <%= form.date_field(:date, label: 'Tournament Date', required: true)%>
    </div>
    <div class="col-md-9">
      <%= form.text_field(:name, required: true, label: 'Tournament Name')%>
    </div>
  </div>

  <div class="form-group form-row">
    <div class="col-md-6">
      <%= form.collection_select(:format_id, Format.all, :id, :name, label: 'Tournament Format:') %>
    </div>
    <div class="col-md-6">
      <%= form.collection_select(:tournament_type_id, TournamentType.all, :id, :name,  label: 'Tournament Type:') %>
    </div>
  </div>

  <div class="form-group form-row">
    <div class="col-md-4">
      <%= form.text_field(:location, label: 'Store Name / Location')%>
    </div>
    <div class="col-md-4">
      <%= form.text_field(:state, label: 'State/Province') %>
    </div>
    <div class="col-md-4">
      <%= label_tag('tournament_country', 'Country')%>
      <%= form.country_select(:country, {priority_countries: ["US"], include_blank:true}, {class: 'form-control'}) %>
    </div>
  </div>

  <p class='form-group'>
<%= label_tag('', "You can load player and round data in three different ways. ") %> <br>

<%= label_tag('', "1: You can link to a TableTop.TO or Best Coast Pairings event via url like https://tabletop.to/jank-tank-open") %> <br>
<%= label_tag('', "2: Paste an export from cryodex") %> <br>
<%= label_tag('', "3: Create an empty event with a set number of players and fill out the lists, names and scores manually.") %> <br>
<%= label_tag('', "Fill out only one of the following boxes; if your chosen url or json export is invalid you'll have to create a new event.") %>
  </p>

<p>
  <div class="form-group form-row">
    <div class="col-md-5">
      <%= form.text_field(:tabletop_url, label: 'Tabletop.TO or Best Coast Pairings URL') %>
    </div>
    <div class='col-md-5'>
      <%= form.text_area(:cryodex_json, label: 'Cryodex json export')%>
    </div>
    <div class="col-md-2">
      <%= form.number_field(:participant_number, value: @tournament.participants.size, max: 999, min: 0, label: 'Number of Players (Manual Entry)')%>
    </div>
  </div>
</p>
<p>
  <dive class="form-group for row">
  <div class="actions">
    <%= form.submit %>
    <%= link_to 'Back', tournaments_path, {class: 'btn btn-danger'} %>
  </div>
  </div>
</p>

<% end %>
