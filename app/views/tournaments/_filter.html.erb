<div class="card">
  <div class="card-body">
    <div>
      <h3 class="text-center">
        Filters
      </h3>
      <%= bootstrap_form_tag do |form|%>
        <div class="form-group form-row">
          <div class="col-md-1">
            <%= form.number_field :min_participants, label: "Min #:"%>
          </div>
          <div class="col-md-1">
            <%= form.number_field :max_participants, label: "Max #:"%>
          </div>
          <div class="col-md-2">
            <%= form.collection_select(:format_id, Format.all, :id, :name, label: 'Format:', include_blank:true) %>
          </div>
          <div class="col-md-2">
            <%= form.collection_select(:tournament_type_id, TournamentType.all, :id, :name,  label: 'Type:', include_blank:true) %>
          </div>
          <div class="col-md-2">
            <%= label_tag(:country, 'Country')%>
            <%= form.country_select(:country, {priority_countries: ["US"], include_blank:true}, {class: 'form-control'}) %>
          </div>
        </div>
        <div class="form-group form-row">
          <div>
            <button id="filter_bar_submit" type="button" class="btn btn-secondary mr-3">Filter</button>
          </div>
          <div>
            <%= link_to 'Reset', request.env['PATH_INFO'], method: "get", class: 'btn btn-warning mr-3' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>