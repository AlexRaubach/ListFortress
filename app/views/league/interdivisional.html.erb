<div class="container">

<h1>Create an Interdivisional Match</h1>


<% if @participants.present? %>

  <%= bootstrap_form_tag url: '/league/interdivisional' do |f| %>
    <%= f.select :player2_id, @participants.collect{|p| [p.user.display_name, p.id]} %>
    <%= f.submit %>
  <% end %>

<% else %>
  <h3><%="You must be signed in and enrolled in the latest league to create a match."%></h3>
<% end %>


</div>