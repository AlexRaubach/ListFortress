<div class="container">

<h1>Create an Interdivisional Match</h1>


<% if current_user && current_user.league_participants.first %>
  <% current_league_participant = current_user.league_participants.first %>
  <% participants = LeagueParticipant
  .joins(:division, :season)
  .where("divisions.season_id = ? AND divisions.tier = ? AND divisions.id != ?", 
  current_league_participant.season.id, current_league_participant.division.tier, current_league_participant.division.id) %>

<% else %>
  <h3><%="You must be signed in and enrolled in the latest league to create a match."%></h3>
<% end %>


</div>