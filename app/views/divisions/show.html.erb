<div class='container'>

<h1 class="text-center m-5">
Overview for <%= @division.name %> Division
</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Seasons', seasons_path %></li>
    <li class="breadcrumb-item">
      <%= link_to 'Season ' + @division.season.season_number.to_s, season_path(season_number: @division.season.season_number) %>
    </li>
    <li class="breadcrumb-item active" aria-current="page"> <%= @division.name %> Division</li>
  </ol>
</nav>

<table class="table table-striped">
  <tr>
    <th>Divisional Rank</th>
    <th>Player Name</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>MoV</th>
  </tr>

  <% @players.each_with_index do |participant, index| %>
    <tr>
      <%# @display_name = participant.user ? participant.user&.display_name : participant.list_juggler_name %>
      <td><%= index + 1 %> </td>
      <td><%= link_to(participant.name, league_participant_path(participant)) %></td>
      <td><%= participant.score ? participant.score : '?' %></td>
      <td><%= participant.losses ? participant.losses : '?' %></td>
      <td><%= participant.mov ? participant.mov : '?' %></td>
    </tr>

  <% end %>
</table>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Seasons', seasons_path %></li>
      <li class="breadcrumb-item">
        <%= link_to 'Season ' + @division.season.season_number.to_s, season_path(season_number: @division.season.season_number) %>
      </li>
      <li class="breadcrumb-item active" aria-current="page"> <%= @division.name %> Division</li>
    </ol>
  </nav>

</div>